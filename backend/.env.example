# BossUp Environment Configuration
# ==================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Firebase Configuration
# =============================================================================

# Option 1: Path to Firebase service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=firebase-credentials.json

# Option 2: Firebase credentials as JSON string (for deployment)
# FIREBASE_CREDENTIALS={"type":"service_account","project_id":"..."}

# =============================================================================
# JWT Configuration
# =============================================================================

# IMPORTANT: Change this in production!
JWT_SECRET_KEY=bossup-production-secret-change-this-to-random-string-2024

# Token expiration in minutes (default: 60)
JWT_EXPIRE_MINUTES=60

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# =============================================================================
# Payment Gateway (Future)
# =============================================================================

# Stripe (if using)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Paystack (if using)
# PAYSTACK_SECRET_KEY=sk_test_...

# Flutterwave (if using)
# FLUTTERWAVE_SECRET_KEY=...
